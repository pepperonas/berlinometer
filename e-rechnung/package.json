{
  "name": "@handwerkos/monorepo",
  "version": "1.0.0",
  "description": "ModularERP - E-Rechnung compliant ERP system for small businesses",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:web": "npm run dev --workspace=@handwerkos/web",
    "dev:api": "npm run dev --workspace=@handwerkos/api",
    "build": "npm run build --workspaces",
    "build:web": "npm run build --workspace=@handwerkos/web",
    "build:api": "npm run build --workspace=@handwerkos/api",
    "start": "npm run start --workspaces",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces",
    "test:e2e": "npm run test:e2e --workspace=@handwerkos/web",
    "db:generate": "npm run db:generate --workspace=@handwerkos/database",
    "db:push": "npm run db:push --workspace=@handwerkos/database",
    "db:migrate": "npm run db:migrate --workspace=@handwerkos/database",
    "db:studio": "npm run db:studio --workspace=@handwerkos/database",
    "db:seed": "npm run db:seed --workspace=@handwerkos/database",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "clean": "rm -rf node_modules && npm run clean --workspaces"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "concurrently": "^8.2.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/handwerkos/modular-erp"
  },
  "author": "HandwerkOS Team",
  "license": "MIT"
}